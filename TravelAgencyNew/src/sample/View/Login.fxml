            <Hyperlink fx:id="forgotPassword" layoutX="231.0" layoutY="218.0" onAction="#showDialog" prefHeight="23.0" prefWidth="76.0" text="Click Here" />
            <PasswordField fx:id="TfPassword" layoutX="82.0" layoutY="83.0" prefHeight="25.0" prefWidth="195.0" promptText="*****" />
            </children>
        </AnchorPane>
      <ImageView fitHeight="71.0" fitWidth="97.0" layoutX="1.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Images/newLogo.png" />
         </image>
      </ImageView>
    </children>
</AnchorPane>
