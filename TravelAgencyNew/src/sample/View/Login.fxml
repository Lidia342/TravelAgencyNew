            <children>
                <Button fx:id="logInButton" layoutX="162.0" layoutY="136.0" mnemonicParsing="false" onAction="#login" prefHeight="19.0" prefWidth="57.0" style="-fx-background-color: white;" text="Log in">
               <font>
                  <Font size="10.0" />
               </font></Button>
                <TextField fx:id="TfEmail" layoutX="82.0" layoutY="30.0" prefHeight="25.0" prefWidth="195.0" promptText="Please enter your email" />
